<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>
<dspl targetNamespace="http://www.metsci.com/dspl/track" xmlns="http://schemas.google.com/dspl/2010"
	xmlns:geo="http://www.google.com/publicdata/dataset/google/geo"
	xmlns:time="http://www.google.com/publicdata/dataset/google/time"
	xmlns:quantity="http://www.google.com/publicdata/dataset/google/quantity"
	xmlns:entity="http://www.google.com/publicdata/dataset/google/entity"
	xmlns:physical="http://www.metsci.com/dspl/physical_units">

	<import namespace="http://www.google.com/publicdata/dataset/google/time" />
	<import namespace="http://www.google.com/publicdata/dataset/google/quantity" />
	<import namespace="http://www.google.com/publicdata/dataset/google/entity" />
	<import namespace="http://www.google.com/publicdata/dataset/google/geo" />
	<import namespace="http://www.metsci.com/dspl/physical_units" />

	<info>
		<name>
			<value xml:lang="en">Track concepts</value>
		</name>
		<description>
			<value xml:lang="en">Concepts for representing geographic tracks.
			</value>
		</description>
	</info>

	<provider>
		<name>
			<value xml:lang="en">Metron Inc.</value>
		</name>
		<description>
			<value xml:lang="en">Metron Inc.</value>
		</description>
		<url>
			<value xml:lang="en">http://www.metsci.com</value>
		</url>
	</provider>

	<concepts>
		<concept id="entity">
			<info>
				<name>
					<value>Entity Identifier</value>
				</name>
				<description>
					<value>An identifier code describing a physical object.</value>
				</description>
			</info>
			<type ref="string" />
		</concept>

		<concept id="identifier">
			<info>
				<name>
					<value>Track Identifier</value>
				</name>
				<description>
					<value>An identifier code generated by a tracking system to indicate a related sequence of observations (a track).</value>
				</description>
			</info>
			<type ref="string" />
		</concept>
		
		<concept id="conical_true_flag">
			<info>
				<name>
					<value>Conical/Absolute Flag</value>
				</name>
				<description>
					<value>A flag indicating whether a bearing sensor observation represents a conical (if true) or absolute (if false) bearing.</value>
				</description>
			</info>
			<type ref="boolean" />
		</concept>

		<concept id="source" extends="entity:entity">
			<info>
				<name>
					<value>Source</value>
				</name>
				<description>
					<value>The source of the track observation (often a sensor or sub-system of a system concept).</value>
				</description>
			</info>
			<type ref="string" />
		</concept>

		<concept id="system" extends="entity:entity">
			<info>
				<name>
					<value>System</value>
				</name>

				<description>
					<value>The tracking system which generated the track observation.</value>
				</description>
			</info>
		</concept>


		<concept id="latitude" extends="quantity:magnitude">
			<info>
				<name>
					<value>Latitude</value>
				</name>
				<description>
					<value>The angular distance of a location south or north of the equator.
					</value>
				</description>
			</info>
		</concept>

		<concept id="longitude" extends="quantity:magnitude">
			<info>
				<name>
					<value>Longitude</value>
				</name>
				<description>
					<value>The angular distance of a location east or west of the Prime Meridian.
					</value>
				</description>
			</info>
		</concept>

		<concept id="latitude_degrees" extends="latitude">
			<info>
				<name>
					<value>Latitude</value>
				</name>
				<description>
					<value>The angular distance of a location south or north of the
						equator measured in degrees.
					</value>
				</description>
			</info>
			<attribute id="unit" concept="physical:physical_unit"><value>DEGREES</value></attribute>
		</concept>

		<concept id="longitude_degrees" extends="longitude">
			<info>
				<name>
					<value>Longitude</value>
				</name>
				<description>
					<value>The angular distance of a location east or west of the Prime
						Meridian measured in degrees.
					</value>
				</description>
			</info>
			<attribute id="unit" concept="physical:physical_unit"><value>DEGREES</value></attribute>
		</concept>

		<concept id="course" extends="quantity:magnitude">
			<info>
				<name>
					<value>Course</value>
				</name>
			</info>
			<attribute concept="circular_motion">
				<info>
					<name>
						<value>Circular Motion Direction</value>
					</name>
					<description>
						<value>The circular motion direction corresponding to positive
							course values.
						</value>
					</description>
				</info>
			</attribute>
			<attribute concept="compass_direction">
				<info>
					<name>
						<value>Course Reference</value>
					</name>
					<description>
						<value>The compass direction corresponding to zero course.
						</value>
					</description>
				</info>
			</attribute>
		</concept>

		<concept id="navy_course" extends="course">
			<info>
				<name>
					<value>Course</value>
				</name>
				<description>
					<value>Direction measured in degrees counter clockwise from compass north.
					</value>
				</description>
			</info>

            <attribute id="unit" concept="physical:physical_unit"><value>DEGREES</value></attribute>
			<attribute id="circular_motion">
				<value>COUNTERCLOCKWISE</value>
			</attribute>
			<attribute id="compass_direction">
				<value>NORTH</value>
			</attribute>
		</concept>

		<concept id="navy_bearing" extends="navy_course">
			<info>
				<name>
					<value>Bearing</value>
				</name>
				<description>
					<value>Direction of motion measured in degrees counter clockwise from compass north.
					</value>
				</description>
			</info>
		</concept>

		<concept id="navy_heading" extends="navy_course">
			<info>
				<name>
					<value>Heading</value>
				</name>
				<description>
					<value>Facing direction measured in degrees counter clockwise from compass north.
					</value>
				</description>
			</info>
		</concept>

		<concept id="speed" extends="quantity:magnitude">
			<info>
				<name>
					<value>Speed</value>
				</name>
			</info>
		</concept>

		<concept id="speed_knots" extends="speed">
			<info>
				<name>
					<value>Speed</value>
				</name>
			</info>
            <attribute id="unit" concept="physical:physical_unit"><value>KNOTS</value></attribute>
		</concept>
		
		<concept id="speed_mps" extends="speed">
			<info>
				<name>
					<value>Speed</value>
				</name>
			</info>
            <attribute id="unit" concept="physical:physical_unit"><value>METERS_PER_SECOND</value></attribute>
		</concept>

		<concept id="circular_motion">
		<info>
			<name>
				<value>Circular Motion</value>
			</name>
			<description>
					<value>The direction of circular motion. Defined parametrically, a
						circle in the Cartesian plane defined by x = cos( t ) , y = sin( t )
						is traced clockwise as t decreases in value and counter-clockwise
						as t increases in value.</value>
				</description>
			</info>
			<type ref="string" />
			<defaultValue>CLOCKWISE</defaultValue>
			<table ref="circular_motion_table" />
		</concept>

		<concept id="compass_direction">
			<info>
				<name>
					<value>Compass Direction</value>
				</name>
				<description>
					<value>A list of possible compass headings used to indicate reference points or points of interest. For example, the course
					       concept uses a Compass Direction attribute to define what direction 0 course corresponds to.</value>
				</description>
			</info>
			<type ref="string" />
			<table ref="compass_direction_table" />
		</concept>

		<concept id="cartesian_axis">
			<info>
				<name>
					<value>A set of perpendicular axes making up a Cartesian coordinate system.</value>
				</name>
			</info>
			<type ref="string" />
			<defaultValue>X</defaultValue>
			<table ref="cartesian_axis_table" />
		</concept>

		<concept id="center_reference" extends="geo:location">
			<info>
				<name>
					<value>Center Reference</value>
				</name>
				<description>
					<value>A Latitude Longitude reference point indicating a reasonable central location reference point.
					       This can be used for tangent plane approximations to the data elements or as a reference point
                                               for Cartesian distance offsets.</value>
				</description>
			</info>
		</concept>

		<concept id="offset" extends="quantity:magnitude">
			<info>
				<name>
					<value>Position Offset</value>
				</name>
				<description>
					<value>Offset distance from center point.</value>
				</description>
			</info>
			<property id="center" concept="center_reference"/>
			<attribute id="cartesian_axis" concept="cartesian_axis"/>
		</concept>

		<concept id="offset_yards" extends="offset">
			<info>
				<name>
					<value>Position Offset</value>
				</name>
				<description>
					<value>Offset in yards from center point.</value>
				</description>
			</info>
			<attribute id="unit" concept="physical:physical_unit"><value>YARDS</value></attribute>
		</concept>
		
		<concept id="offset_meters" extends="offset">
			<info>
				<name>
					<value>Position Offset</value>
				</name>
				<description>
					<value>Offset in yards from center point.</value>
				</description>
			</info>
			<attribute id="unit" concept="physical:physical_unit"><value>METERS</value></attribute>
		</concept>
	</concepts>

	<tables>
		<table id="circular_motion_table">
			<column id="circular_motion" type="string" />
			<data>
				<file format="csv" encoding="utf-8">circular_motion_table.csv</file>
			</data>
		</table>

		<table id="compass_direction_table">
			<column id="compass_direction" type="string" />
			<data>
				<file format="csv" encoding="utf-8">compass_direction_table.csv</file>
			</data>
		</table>

		<table id="navy_course_table">
			<column id="circular_motion" type="string" />
			<column id="compass_direction" type="string" />
			<data>
				<file format="csv" encoding="utf-8">navy_course_table.csv</file>
			</data>
		</table>

		<table id="cartesian_axis">
			<column id="cartesian_axis" type="string" />
			<data>
				<file format="csv" encoding="utf-8">cartesian_axis_table.csv</file>
			</data>
		</table>
	</tables>
</dspl>
